---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="h-full scroll-smooth" lang="en-GB">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-black/90 font-sans c-white">
		<main class="relative">
			<div class="relative z-999 mx-auto max-w-4xl flex flex-col p-10">
				<Header />
				<main class="flex-1"><slot /></main>
				<Footer />
			</div>
			<div class="absolute inset-0 overflow-hidden from-blue to-purple bg-gradient-to-br opacity-9">
			</div>
		</main>
	</body>
</html>
