---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="h-full scroll-smooth" lang="en-GB">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-sans bg-black/90 c-white">
		<main class="relative">
			<div class="z-999 relative mx-auto flex max-w-4xl p-10 flex-col">
				<Header />
				<main class="flex-1"><slot /></main>
				<Footer />
			</div>
			<div class="absolute inset-0 overflow-hidden opacity-9 bg-gradient-to-br from-blue to-purple"></div>
		</main>
	</body>
</html>
